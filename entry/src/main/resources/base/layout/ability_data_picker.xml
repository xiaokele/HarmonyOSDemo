<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DatePicker
        ohos:id="$+id:date_pick"
        ohos:height="match_content"
        ohos:normal_text_color="#00FFFF"
        ohos:selected_text_color="#FFA500"
        ohos:selected_text_size="24fp"
        ohos:operated_text_color="#FF0000"
        ohos:wheel_mode_enabled="true"
        ohos:shader_color="gray"
        ohos:normal_text_size="20fp"
        ohos:selected_normal_text_margin_ratio="8"
        ohos:width="300vp">
    </DatePicker>

    <Text
        ohos:id="$+id:text_date"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="date"
        ohos:margin="8vp"
        ohos:padding="4vp"
        ohos:text_size="14fp">
    </Text>

</DirectionalLayout>